#!/usr/bin/with-contenv bashio
# ==============================================================================
# Run the Victoria Metrics
# ==============================================================================
exec victoria-metrics-prod --influxListenAddr=:"$(bashio::addon.port 8089)" --httpListenAddr=:"$(bashio::addon.port 8428)" -storageDataPath=/data -retentionPeriod="$(bashio::config 'retention')" -promscrape.config=/config/victoria-metrics/prometheus.yml
